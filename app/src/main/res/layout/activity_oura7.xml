<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oura7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="260px"
                android:layout_height="match_parent"
                android:id="@+id/text_avg_hr"
                android:text="Avg HR"
                android:textAlignment="center"
                android:layout_marginStart="10px"
                android:textSize="20dp"
                android:textColor="@color/white">

            </TextView>

            <TextView
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:id="@+id/text_avg_hrv"
                android:text="Avg HRV"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white">


            </TextView>

            <TextView
                android:layout_width="260px"
                android:layout_height="match_parent"
                android:id="@+id/text_sleepscore"
                android:text="Sleep Score"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white">


            </TextView>

            <TextView
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:id="@+id/text_readiness"
                android:text="Temp. Dev."
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white">

            </TextView>

            <TextView
                android:layout_width="325px"
                android:layout_height="match_parent"
                android:id="@+id/text_tempdev"
                android:text="Readiness"
                android:textAlignment="center"
                android:layout_marginEnd="0dp"
                android:textSize="20dp"
                android:textColor="@color/white">

            </TextView>


        </LinearLayout>

        <ListView
            android:id="@+id/oura_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >


        </ListView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>